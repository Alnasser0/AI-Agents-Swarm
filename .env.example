# ================================
# AI AGENTS SWARM CONFIGURATION
# ================================

# Email Configuration (Gmail - TESTED AND VERIFIED)
# ⚠️ IMPORTANT: You MUST enable 2FA and generate an App Password for Gmail
# 1. Enable 2-Factor Authentication in your Google Account
# 2. Go to Google Account Settings > Security > App passwords  
# 3. Generate a new App Password for "Mail" application
# 4. Use the 16-character App Password below (not your regular password)
EMAIL_PROVIDER=gmail
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password  # Use Gmail App Password (16 characters)
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_CHECK_INTERVAL=300  # 5 minutes fallback polling
ENABLE_REALTIME_EMAIL=true  # Enable IMAP IDLE for instant notifications
REALTIME_FALLBACK_INTERVAL=180  # Fallback polling interval in seconds

# ⚠️ NOTE: Only Gmail has been tested and verified. Other email providers
# may work but have not been tested in this system.

# Notion Configuration (Required for task management)
# 1. Create a Notion integration at https://www.notion.so/my-integrations
# 2. Create a database and share it with your integration
# 3. Copy the integration secret and database ID below
NOTION_API_KEY=your-notion-integration-key
NOTION_DATABASE_ID=your-database-id

# Slack Configuration (Future feature - not yet implemented)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# AI Model Configuration
# ⚠️ IMPORTANT: Only Google Gemini has been tested and confirmed working
# Other AI models may work but have not been verified in this system
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_gemini_api_key_here  # Same as GEMINI_API_KEY
DEFAULT_MODEL=google-gla:gemini-2.0-flash  # Recommended and tested model

# Application Settings
LOG_LEVEL=INFO
ENABLE_BACKGROUND_TASKS=true
TIMEZONE=UTC

# Dashboard and API Settings
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
API_HOST=localhost
API_PORT=8000

# Development Settings (Optional), can be deleted.
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
