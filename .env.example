# Email Configuration (Gmail)
EMAIL_PROVIDER=gmail
EMAIL_ADDRESS=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password  # Use Gmail App Password for security
EMAIL_IMAP_SERVER=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_CHECK_INTERVAL=300  # 5 minutes
ENABLE_REALTIME_EMAIL=true  # Enable IMAP IDLE for instant notifications
REALTIME_FALLBACK_INTERVAL=180  # Fallback polling interval in seconds

# Notion Configuration
NOTION_API_KEY=your-notion-integration-key
NOTION_DATABASE_ID=your-database-id

# Slack Configuration (future)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# AI Model API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here
DEFAULT_MODEL=anthropic:claude-3-5-sonnet-latest

# Application Settings
LOG_LEVEL=INFO
ENABLE_BACKGROUND_TASKS=true
TIMEZONE=UTC

# Dashboard Settings
DASHBOARD_HOST=localhost
DASHBOARD_PORT=8501
API_HOST=localhost
API_PORT=8000
